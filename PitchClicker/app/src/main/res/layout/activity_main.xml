<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_light_pressed"
    android:padding="15dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Inning_button"
                android:layout_width="72dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:background="@color/green"
                android:text="@string/Inning_button"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/Out_button"
                app:layout_constraintTop_toTopOf="@+id/Out_button" />

            <TextView
                android:id="@+id/Inning_textView"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintStart_toEndOf="@+id/Out_textView"
                app:layout_constraintTop_toTopOf="@+id/Out_textView" />

            <TextView
                android:id="@+id/Strike_textView"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintBottom_toTopOf="@+id/Strike_button"
                app:layout_constraintStart_toStartOf="@+id/Strike_button" />

            <TextView
                android:id="@+id/Out_textView"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintStart_toStartOf="@+id/Out_button"
                app:layout_constraintTop_toBottomOf="@+id/Strike_button" />

            <TextView
                android:id="@+id/Ball_textView"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintBottom_toTopOf="@+id/Ball_button"
                app:layout_constraintStart_toStartOf="@+id/Ball_button" />

            <Button
                android:id="@+id/Out_button"
                android:layout_width="72dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:background="@color/orange"
                android:text="@string/outs_button"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Out_textView" />

            <Button
                android:id="@+id/Ball_button"
                android:layout_width="72dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:background="@color/blue"
                android:text="@string/balls_button"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/Strike_button"
                app:layout_constraintTop_toTopOf="@+id/Strike_button" />

            <Button
                android:id="@+id/Strike_button"
                android:layout_width="72dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:background="@color/dark_red"
                android:text="@string/strikes_button"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.344" />

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

</android.support.wear.widget.BoxInsetLayout>